{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "commitglobal/one-roof",
    "type": "project",
    "description": "Shelter management platform.",
    "keywords": [
        "commitglobal",
        "one-roof",
        "shelter-management",
        "laravel",
        "tailwindcss"
    ],
    "license": "MPL-2.0",
    "require": {
        "php": "^8.4",
        "awcodes/filament-table-repeater": "^3.1",
        "codeat3/blade-majestic-icons": "^2.2",
        "filament/filament": "^3.3",
        "filament/spatie-laravel-media-library-plugin": "^3.3",
        "filament/spatie-laravel-translatable-plugin": "^3.3",
        "laravel/framework": "^12.49",
        "haydenpierce/class-finder": "^0.5.3",
        "laravel/scout": "^10.23",
        "laravel/tinker": "^2.10",
        "league/flysystem-aws-s3-v3": "^3.30",
        "league/flysystem-read-only": "^3.28",
        "maatwebsite/excel": "^3.1",
        "sentry/sentry-laravel": "^4.20",
        "spatie/laravel-activitylog": "^4.11",
        "spatie/laravel-data": "^4.18",
        "tpetry/laravel-query-expressions": "^1.5",
        "typesense/typesense-php": "^5.2"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.93",
        "fruitcake/laravel-debugbar": "^4.0",
        "laravel/pail": "^1.2",
        "laravel/sail": "^1.51",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan filament:upgrade",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --nowrite"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
